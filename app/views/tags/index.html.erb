<h1>All Tags</h1>

<table>
	<% @tags.each do |tag| %>
		<tr>
			<td><%= link_to tag.name, tag_path(tag) %></td>
			<td><%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the article?"} %></td>
		</tr>
	<% end %>
</table>
<%= link_to "<< Back to Articles List", articles_path %>